{
  "buildCommand": "cd surf-app && npm install && npm run build",
  "outputDirectory": "surf-app/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://waves-db-backend.vercel.app/$1"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
